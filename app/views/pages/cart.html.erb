<% current_user.user_products.each do |item| %>
<%= item.product.title %> </br>
<%= number_to_currency(item.product.price,:precision => 2) %> </br> 
<%= button_to "Remove Item", remove_product_path(:id => item.id) %>
-----------</br>

<%end%>


<% if user_signed_in? && current_user.affiliation %>
  <h2>Total: <%= number_to_currency(@cart_sum,:precision => 2) %></h2>
  <h2>Discount:<%= "#{@discount}%"%></h2>
  <h1>New Total: <%= number_to_currency(@discounted_cart_sum,:precision => 2) %></h1>
<%else%>
  <h1>New Total: <%= number_to_currency(@cart_sum,:precision => 2) %></h1>
<%end%>



